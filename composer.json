{
    "name": "jcupitt/vips",
    "description": "A high-level interface to the libvips image processing library.",
    "keywords": [
        "image",
        "processing",
        "libvips"
    ],
    "homepage": "https://github.com/libvips/php-vips",
    "license": "MIT",
    "authors": [
        {
            "name": "John Cupitt",
            "email": "jcupitt@gmail.com",
            "homepage": "https://github.com/jcupitt",
            "role": "Developer"
        }
    ],
    "require": {
        "php": ">=7.0.11",
        "ext-vips": ">=0.1.2",
        "psr/log": "^1.0.2"
    },
    "require-dev": {
        "phpunit/phpunit": "^6.5",
        "phpdocumentor/phpdocumentor" : "^2.9",
        "jakub-onderka/php-parallel-lint": "^1.0.0",
        "squizlabs/php_codesniffer": "3.*"
    },
    "autoload": {
        "psr-4": {
            "Jcupitt\\Vips\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Jcupitt\\Vips\\Test\\": "tests"
        }
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0.x-dev"
        }
    },
    "scripts": {
        "test": [
            "parallel-lint . --exclude vendor",
            "phpunit",
            "phpcs --standard=phpcs-ruleset.xml ."
        ]
    }
}
